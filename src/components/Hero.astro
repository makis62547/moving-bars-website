---
import Header from "./Header.astro";
---

<section id="hero" class="hero">
  <div class="hero-bg" role="presentation"></div>
  <div class="hero-overlay" aria-hidden="true"></div>

  <Header />

  <div class="hero-center">
    <ul class="hero-usp">
      <li><span class="hero-check">✔</span> Faire Preise</li>
      <li><span class="hero-check">✔</span> Langjährige Erfahrung</li>
      <li><span class="hero-check">✔</span> Beste Cocktails & Longdrinks</li>
      <li><span class="hero-check">✔</span> Für Privat & Firmen – Events</li>
    </ul>

    <div class="hero-arrow">⌄</div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    background: #000;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background-image: url("/images/hero.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.55) 100%);
    z-index: 5;
  }

  :global(header) {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 66px;
    z-index: 40;
  }

  .hero-center {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: left;
    color: #fff;
    padding: 140px 1.5rem 0;
    width: min(1100px, 100%);
    margin: 0 auto;
    z-index: 20;
  }

  .hero-usp {
    display: grid;
    gap: 1.75rem;
    font-size: clamp(1.425rem, 2.7vw, 2.25rem);
    font-weight: 300;
    line-height: 1.05;
  }

  .hero-check {
    color: #d38b45;
    margin-right: 0.5rem;
  }

  .hero-arrow {
    margin-top: 3rem;
    font-size: clamp(2.5rem, 4vw, 3.75rem);
    color: rgba(255, 255, 255, 0.9);
    animation: bounce 1.5s infinite;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
  }

  :global(header nav) {
    display: flex;
    gap: 56px;
    white-space: nowrap;
  }
</style>
