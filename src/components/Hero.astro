---
const bullets = [
  "FAIRE PREISE",
  "LANGJÄHRIGE ERFAHRUNG",
  "BESTE COCKTAILS & LONGDRINKS",
  "FÜR PRIVAT & FIRMEN - EVENTS",
];
---

<section
  id="hero"
  class="relative h-[95vh] w-full overflow-hidden bg-black text-white"
>

  <!-- Hintergrundbild -->
  <div 
    class="absolute inset-0 bg-cover bg-center"
    style="background-image: url('/images/hero.jpg');"
  ></div>

  <!-- Schwarzes Overlay -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Logo oben links -->
  <div class="absolute top-8 left-8 z-20">
    <img src="/images/logo-white.png" alt="moving bars" class="h-20" />
  </div>

  <!-- Zentrierter Content -->
  <div class="relative z-10 flex h-full flex-col items-center justify-center text-center px-6">
    
    <ul class="space-y-5 text-xl md:text-2xl font-medium tracking-wide">
      {bullets.map((item) => (
        <li class="flex items-center gap-4 justify-center">
          <span class="text-[#D38B45] text-3xl">✔</span>
          {item}
        </li>
      ))}
    </ul>

    <!-- Pfeil nach unten -->
    <div class="absolute bottom-16 flex justify-center w-full">
      <span class="text-white text-4xl animate-bounce">⌄</span>
    </div>

  </div>

  <!-- CTA jetzt anfragen — unten rechts -->
  <a
    href="#contact"
    class="absolute bottom-10 right-10 bg-black/70 border border-[#D38B45] text-[#D38B45] px-6 py-3 text-sm uppercase tracking-wide hover:bg-[#D38B45] hover:text-black transition"
  >
    Jetzt anfragen
  </a>

</section>
