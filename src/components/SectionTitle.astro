---
interface Props {
  label?: string;
  title: string;
  description?: string;
}

const { label, title, description } = Astro.props;
---

<div class="flex flex-col gap-3">
  {label && (
    <p class="text-xs uppercase tracking-[0.35em] text-white/60">{label}</p>
  )}
  <h2 class="text-2xl md:text-3xl leading-tight">{title}</h2>
  {description && (
    <p class="text-sm text-white/75 leading-relaxed max-w-2xl">{description}</p>
  )}
</div>
