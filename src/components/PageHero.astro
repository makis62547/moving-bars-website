---
const {
  title,
  intro = "",
  backgroundImage = "/images/hero-startseite.jpg",
} = Astro.props;
---

<section class="page-hero">
  <div
    class="page-hero-bg panel-bg"
    role="presentation"
    style={`background-image:url('${backgroundImage}')`}
  ></div>

  <div class="page-hero-overlay" aria-hidden="true"></div>

  <div class="page-hero-inner site-container">
    <h1 class="page-hero-title">{title}</h1>
    {intro && <p class="page-hero-intro">{intro}</p>}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    height: var(--page-hero-height);
    min-height: 18rem;
    overflow: hidden;
    background: #000;
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
  }

  .page-hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.45);
  }

  .page-hero-inner {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .page-hero-title {
    margin: 0;
    color: #fff;
    text-transform: uppercase;
  }

  .page-hero-intro {
    max-width: 60ch;
    color: rgba(255, 255, 255, 0.85);
  }
</style>
