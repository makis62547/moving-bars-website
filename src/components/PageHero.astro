---
export interface Props {
  title: string;
  intro?: string;
}

const { title, intro } = Astro.props;
---

<section class="page-hero">
  <div class="page-hero-shell site-container">
    <div class="page-hero-content">
      <h1 class="page-hero-title display-size-h1">{title}</h1>
      {intro && <p class="page-hero-intro">{intro}</p>}
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    min-height: var(--page-hero-height);
    display: flex;
    align-items: center;
    background: radial-gradient(circle at 20% 20%, rgba(var(--accent-rgb), 0.16), transparent 42%),
      linear-gradient(135deg, rgba(255, 255, 255, 0.06), rgba(0, 0, 0, 0.85));
    color: var(--text-color);
    padding: clamp(2.5rem, 4vw, 3.75rem) var(--section-pad-inline);
    border-bottom: 1px solid var(--border);
    overflow: hidden;
  }

  .page-hero::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.7));
    pointer-events: none;
  }

  .page-hero-shell {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .page-hero-content {
    max-width: min(var(--text-max-width), 820px);
    display: grid;
    gap: clamp(0.9rem, 1.6vw, 1.4rem);
  }

  .page-hero-title {
    line-height: var(--heading-line-height);
    text-transform: none;
  }

  .page-hero-intro {
    margin: 0;
    color: var(--text-muted-color);
    max-width: var(--paragraph-text-width);
  }
</style>
