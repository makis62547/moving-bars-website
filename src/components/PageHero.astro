---
const {
  title,
  intro = "",
} = Astro.props;
---

<section class="page-hero">
  <div class="page-hero-bg parallax-bg" aria-hidden="true"></div>

  <div class="page-hero-overlay" aria-hidden="true"></div>

  <div class="page-hero-inner site-container">
    <h1 class="page-hero-title">{title}</h1>
    {intro && <p class="page-hero-intro">{intro}</p>}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    height: var(--page-hero-height);
    min-height: 18rem;
    overflow: hidden;
    background: #000;
  }

  .page-hero-bg {
    position: absolute;
    inset: 0;
    background-image: url("/images/hero.jpg");
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .page-hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.55) 100%);
    z-index: 5;
  }

  .page-hero-inner {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .page-hero-title {
    margin: 0;
    color: #fff;
    text-transform: uppercase;
  }

  .page-hero-intro {
    max-width: 60ch;
    color: rgba(255, 255, 255, 0.85);
  }
</style>
