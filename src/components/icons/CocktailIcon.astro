---
interface Props {
  class?: string;
}

const { class: className }: Props = Astro.props;

// Vite/Astro gibt dir so eine saubere URL f√ºrs Asset
import cocktailPngUrl from "../../assets/icons/cocktail.png?url";
---

<span
  class={`cocktail-icon${className ? ` ${className}` : ""}`}
  style={`
    background-color: var(--accent, #c9682a);
    -webkit-mask-image: url('${cocktailPngUrl}');
    mask-image: url('${cocktailPngUrl}');
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
    -webkit-mask-size: contain;
    mask-size: contain;
  `}
></span>

