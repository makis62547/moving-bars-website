---
const {
  src,
  alt = "Moving Bars",
  height = "clamp(420px, 60vh, 760px)",
} = Astro.props;
---

<section class="mb-parallax full-bleed" style={`--mb-h:${height};`}>
  <div
    class="mb-parallax__bg parallax-bg"
    role="img"
    aria-label={alt}
    style={`background-image: url(${src});`}
  ></div>
</section>

<style>
.full-bleed{
  width: 100vw;
  margin-left: calc(50% - 50vw);
  margin-right: calc(50% - 50vw);
}

.mb-parallax{
  height: var(--mb-h);
  position: relative;
  overflow: hidden;
}

.mb-parallax__bg{
  position: absolute;
  inset: 0;
}
</style>
