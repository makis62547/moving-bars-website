---
const navLinks = [
  { href: "/cocktail-catering", label: "Cocktail Catering" },
  { href: "/mobile-bar", label: "Mobile Bar" },
  { href: "/cocktail-show", label: "Cocktail Show" },
  { href: "/cocktailkurse", label: "Cocktailkurse" },
  { href: "/kaffeecatering", label: "Kaffee Catering" },
  { href: "/anfrage", label: "Anfrage" },
];
---

<header
  class="
    fixed top-0 left-0 right-0 z-50
    bg-[rgba(0,0,0,0.55)]
    h-[var(--header-h)]
    overflow-visible
  "
>
  <div
    class="
      max-w-[1240px] mx-auto
      flex h-full items-center justify-between
      px-12
      overflow-visible
    "
  >
    <!-- Logo -->
    <a
      href="/"
      class="
        relative
        flex h-full items-start
        pt-[10px]
        overflow-visible
      "
      aria-label="Startseite"
    >
      <img
        src="/images/logo-white.png"
        alt="moving bars logo"
        class="
          h-[140px] w-auto
          translate-y-[8px]
          select-none
        "
      />
    </a>

    <!-- Navigation -->
    <nav
      class="
        flex h-full flex-nowrap items-center justify-center
        gap-14
        text-sm md:text-base
        font-light
      "
      aria-label="Hauptnavigation"
    >
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="
            text-white
            whitespace-nowrap
            tracking-normal
            normal-case
            hover:text-[#D38B45]
            transition-colors
          "
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>
