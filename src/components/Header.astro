<header class="fixed top-0 left-0 w-full z-50 bg-black/40 backdrop-blur-sm border-b border-white/10 transition-all duration-300" id="site-header">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 py-4">

    <!-- LOGO -->
    <a href="/" class="flex items-center">
      <img 
        src="/images/logo-white.png" 
        alt="Moving Bars" 
        class="h-10 md:h-12 transition-all duration-300"
        id="site-logo"
      />
    </a>

    <!-- NAVIGATION -->
    <nav class="hidden md:flex gap-10 text-sm uppercase tracking-wide font-semibold text-white">
      <a href="/cocktail-catering" class="hover:text-[#D38B45]">Cocktail Catering</a>
      <a href="/mobile-bar" class="hover:text-[#D38B45]">Mobile Bar</a>
      <a href="/cocktailshow" class="hover:text-[#D38B45]">Cocktail Show</a>
      <a href="/cocktailkurse" class="hover:text-[#D38B45]">Cocktailkurse</a>
      <a href="/kaffeecatering" class="hover:text-[#D38B45]">Kaffee Catering</a>
      <a href="/anfrage" class="hover:text-[#D38B45]">Anfrage</a>
    </nav>
  </div>

  <!-- SHRINK ON SCROLL -->
  <script>
    const header = document.getElementById("site-header");
    const logo = document.getElementById("site-logo");

    window.addEventListener("scroll", () => {
      if (window.scrollY > 30) {
        header.classList.add("bg-black/70");
        logo.style.height = "40px";
      } else {
        header.classList.remove("bg-black/70");
        logo.style.height = "48px";
      }
    });
  </script>
</header>
