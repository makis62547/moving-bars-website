---
const navLinks = [
  { href: "/cocktail-catering", label: "Cocktail Catering" },
  { href: "/mobile-bar", label: "Mobile Bar" },
  { href: "/cocktail-show", label: "Cocktail Show" },
  { href: "/cocktailkurse", label: "Cocktailkurse" },
  { href: "/kaffeecatering", label: "Kaffee Catering" },
  { href: "/anfrage", label: "Anfrage" },
];
---

<header class="site-header">
  <div class="header-inner site-container">
    <a href="/" class="logo" aria-label="Startseite">
      <img src="/images/logo-white.png" alt="moving bars logo" />
    </a>

    <nav class="nav-desktop" aria-label="Hauptnavigation">
      {navLinks.map((link) => (
        <a href={link.href} class="nav-link">{link.label}</a>
      ))}
    </nav>

    <div class="nav-mobile">
      <button
        type="button"
        class="menu-button"
        aria-label="Menü öffnen"
        aria-expanded="false"
        aria-controls="mobile-nav"
        data-menu-button
      >
        <span class="menu-label">Menu</span>
        <span class="menu-icon" aria-hidden="true">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
    </div>
  </div>

  <div id="mobile-nav" class="mobile-overlay" data-menu-panel>
    <button type="button" class="mobile-close" aria-label="Menü schließen" data-menu-close>
      ✕
    </button>
    <div class="mobile-overlay-inner">
      <nav class="mobile-nav" aria-label="Hauptnavigation mobil">
        {navLinks.map((link) => (
          <a href={link.href} class="mobile-nav-link">{link.label}</a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  const header = document.querySelector(".site-header");
  const button = header?.querySelector("[data-menu-button]");
  const panel = header?.querySelector("[data-menu-panel]");
  const closeButton = header?.querySelector("[data-menu-close]");
  const links = Array.from(panel?.querySelectorAll("a") ?? []);

  if (header && button && panel && closeButton) {
    const closeMenu = () => {
      header.classList.remove("is-open");
      button.setAttribute("aria-expanded", "false");
    };

    const openMenu = () => {
      header.classList.add("is-open");
      button.setAttribute("aria-expanded", "true");
    };

    const toggleMenu = () => {
      if (header.classList.contains("is-open")) {
        closeMenu();
      } else {
        openMenu();
      }
    };

    button.addEventListener("click", toggleMenu);
    closeButton.addEventListener("click", closeMenu);
    links.forEach((link) => link.addEventListener("click", closeMenu));

    const handleKey = (event) => {
      if (event.key === "Escape") {
        closeMenu();
      }
    };

    document.addEventListener("keydown", handleKey);

    const handleOverlayClick = (event) => {
      if (event.target === panel) {
        closeMenu();
      }
    };

    panel.addEventListener("click", handleOverlayClick);

    window.addEventListener("resize", () => {
      if (window.innerWidth >= 1024) {
        closeMenu();
      }
    });
  }
</script>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    height: var(--header-h);
    background: rgba(0, 0, 0, 0.55);
    overflow: visible;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    height: 100%;
    overflow: visible;
  }

  .logo {
    display: flex;
    align-items: flex-end; /* am unteren Rand des Header-Balkens ankern */
    height: 100%;
    padding: 0;            /* nichts hoch/runter schieben */
    flex: 0 0 auto;
    flex-shrink: 0;
    white-space: nowrap;
    overflow: visible;
  }

  .logo img {
    height: clamp(90px, 10vw, 140px); /* NICHT ändern, falls aktuell passend */
    width: auto;
    display: block;
    object-fit: contain;
    max-width: none;

    transform: translateY(50%); /* Logo-Mitte = Unterkante Header */
  }

  .nav-link {
    color: #fff;
    font-size: clamp(0.95rem, 1vw, 1.05rem);
    font-weight: 300;
    text-transform: none;
    letter-spacing: normal;
    white-space: nowrap;
    transition: color 150ms ease;
  }

  .nav-link:hover,
  .nav-link:focus-visible {
    color: #d38b45;
  }

  .nav-desktop {
    display: none;
    align-items: center;
    gap: 3.5rem;
    height: 100%;
  }

  .nav-mobile {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  @media (min-width: 1024px) {
    .nav-desktop {
      display: flex;
    }

    .nav-mobile {
      display: none;
    }
  }

  .menu-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.65rem 0.85rem;
    color: #fff;
    font-size: 0.95rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 999px;
    cursor: pointer;
    transition: color 150ms ease, border-color 150ms ease, background-color 150ms ease;
  }

  .menu-button:hover,
  .menu-button:focus-visible {
    color: #d38b45;
    border-color: rgba(211, 139, 69, 0.7);
    outline: none;
  }

  .menu-label {
    display: block;
    letter-spacing: 0.12em;
  }

  .menu-icon {
    display: inline-flex;
    flex-direction: column;
    gap: 6px;
    width: 26px;
    height: 20px;
  }

  .menu-icon span {
    display: block;
    height: 2px;
    width: 100%;
    background: currentColor;
  }

  .mobile-overlay {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(2px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 200ms ease;
    z-index: 45;
  }

  .mobile-overlay-inner {
    width: 100%;
    max-width: var(--content-max);
    padding: 0 var(--content-pad);
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.25rem;
    text-align: center;
  }

  .mobile-nav-link {
    color: #fff;
    font-size: clamp(1.2rem, 4vw, 1.6rem);
    font-weight: 300;
    line-height: 1.7;
    transition: color 150ms ease;
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:focus-visible {
    color: #d38b45;
  }

  .mobile-close {
    position: absolute;
    top: clamp(18px, 3vw, 32px);
    right: clamp(18px, 3vw, 32px);
    background: rgba(0, 0, 0, 0.55);
    border: 1px solid rgba(255, 255, 255, 0.35);
    color: #fff;
    width: 42px;
    height: 42px;
    display: grid;
    place-items: center;
    border-radius: 50%;
    font-size: 1.25rem;
    cursor: pointer;
    transition: color 150ms ease, border-color 150ms ease, background-color 150ms ease;
  }

  .mobile-close:hover,
  .mobile-close:focus-visible {
    color: #d38b45;
    border-color: rgba(211, 139, 69, 0.75);
    outline: none;
  }

  .site-header.is-open .mobile-overlay {
    opacity: 1;
    pointer-events: auto;
  }

  @media (min-width: 1024px) {
    .mobile-overlay {
      display: none;
    }
  }
</style>
