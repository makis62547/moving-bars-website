---
const navLinks = [
  { href: "/cocktail-catering", label: "Cocktail Catering" },
  { href: "/mobile-bar", label: "Mobile Bar" },
  { href: "/cocktail-show", label: "Cocktail Show" },
  { href: "/cocktailkurse", label: "Cocktailkurse" },
  { href: "/kaffeecatering", label: "Kaffee Catering" },
  { href: "/anfrage", label: "Anfrage" },
];
---

<header
  class="
    fixed top-0 left-0 right-0 z-50 overflow-visible
    bg-[rgba(0,0,0,0.55)] h-[60px]
  "
>
  <div class="max-w-[1240px] mx-auto flex h-full items-start justify-between px-12 pt-[12px]">


    <!-- Logo -->
    <a href="/" class="flex items-center mt-[8px]">
      <img
        src="/images/logo-white.png"
        alt="moving bars logo"
        class="h-[144px] w-auto translate-y-[12px]"
      />
    </a>

    <!-- Navigation -->
    <nav
      class="flex h-full flex-nowrap items-center justify-center gap-14 text-sm md:text-base font-semibold pt-[2px]"
    >
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-white whitespace-nowrap tracking-normal normal-case hover:text-[#D38B45] transition"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>
