---
const navLinks = [
  { href: "/cocktail-catering", label: "Cocktail Catering" },
  { href: "/mobile-bar", label: "Mobile Bar" },
  { href: "/cocktail-show", label: "Cocktail Show" },
  { href: "/cocktailkurse", label: "Cocktailkurse" },
  { href: "/kaffeecatering", label: "Kaffee Catering" },
  { href: "/anfrage", label: "Anfrage" },
];
---

<header
  class="
    fixed top-0 left-0 w-full z-50
    bg-black/60
    backdrop-blur-sm
  "
>
  <div class="max-w-7xl mx-auto flex items-center justify-between pl-10 pr-6 py-4">

    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img
        src="/images/logo-white.png"
        alt="moving bars logo"
        class="h-12 md:h-14 transition-all duration-300"
      />
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center gap-10 text-sm font-medium">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-white hover:text-[#D38B45] transition"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>
