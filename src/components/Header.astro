---
const navLinks = [
  { href: "/cocktail-catering", label: "Cocktail Catering" },
  { href: "/mobile-bar", label: "Mobile Bar" },
  { href: "/cocktail-show", label: "Cocktail Show" },
  { href: "/cocktailkurse", label: "Cocktailkurse" },
  { href: "/kaffeecatering", label: "Kaffee Catering" },
  { href: "/anfrage", label: "Anfrage" },
];
---

<header
  class="
    fixed top-0 left-0 right-0 z-50
    bg-[rgba(0,0,0,0.55)] h-20
  "
>
  <div class="max-w-7xl mx-auto flex h-full items-center justify-between px-6 lg:px-10">


    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img
        src="/images/logo-white.png"
        alt="moving bars logo"
        class="h-14 md:h-16 transition-all duration-300"
      />
    </a>

    <!-- Navigation -->
    <nav class="flex h-full flex-nowrap items-center justify-center gap-12 text-sm md:text-base font-semibold">
      {navLinks.map(link => (
        <a
          href={link.href}
          class="text-white whitespace-nowrap tracking-normal normal-case hover:text-[#D38B45] transition"
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>
