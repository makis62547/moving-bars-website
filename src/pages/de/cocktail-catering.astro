---
import BaseLayout from "../../layouts/BaseLayout.astro";
import StandardPageLayout from "../../layouts/StandardPageLayout.astro";
import { i18n } from "../../i18n";

const lang = "de" as const;
const t = i18n[lang];

const heroProps = {
  titleLine1: "COCKTAIL CATERING",
  titleLine2: "MIETEN IN BERLIN",
  heroText:
    "Ob private Feier, Hochzeit, Messeparty oder Großveranstaltung in Berlin und üBARall  - Wenn Du unser mobiles Cocktail Catering mietest, verwöhnen wir Dich und Deine Gäste, damit Du Dich ganz auf Deine Veranstaltung konzentrieren kannst. Wähle eines unserer COCKTAIL-CATERING-PAKET-ANGEBOTE aus und wir melden uns zeitnah, um mit Dir alle Details zu besprechen.",
  heroUsps: [
    "PAKETANGEBOTE FÜR 50 - 300 PERSONEN",
    "RUND-UM-SORGLOS SERVICE",
    "GROSSE COCKTAIL & LONGDRINK AUSWAHL",
    "SCHNELLE BEARBEITUNG IHRER ANFRAGE",
  ],
  bgImage: "/images/cocktail-catering-moving-bars.jpg",
};

const introProps = {
  t,
  titleLine1: "COCKTAIL CATERING",
  titleLine2: "MIETEN IN BERLIN",
  heroText:
    "Ob private Feier, Hochzeit, Messeparty oder Großveranstaltung in Berlin und üBARall  - Wenn Sie unser mobiles Cocktail Catering mieten, verwöhnen wir Sie und Ihre Gäste, damit Sie sich ganz auf Ihre Veranstaltung konzentrieren können. Wählen Sie eines unserer COCKTAIL-CATERING-PAKET-ANGEBOTE aus und wir melden uns zeitnah, um mit Ihnen alle Details zu besprechen.",
};

const introTileHtml = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">COCKTAIL</span> CATERING
  </h3>
  <div class="panel-sep" aria-hidden="true"></div>
  <p class="panel-text">
    Full-Service mobile Bar mit Barkeepern, Ausstattung und Mise en Place für Dein Event.
  </p>
  <p class="panel-text">
    Wir planen Menüs, Lieferwege und Timings so, dass Empfang, Dinner oder Party ohne Wartezeiten laufen.
  </p>
`;

const menusTileHtml = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">MENÜS</span> & PRODUKTE
  </h3>
  <div class="panel-sep" aria-hidden="true"></div>
  <p class="panel-text">
    Klassiker, Signatures oder komplett alkoholfrei: Wir stimmen jedes Cocktail Menu auf Gäste, Anlass und Branding ab.
  </p>
  <p class="panel-text">
    Frische Säfte, klare Eisblöcke, Premium-Spirituosen und Handwerk sind Standard – gerne auch mit thematischen Specials.
  </p>
  <a class="panel-cta mb-btn" href="/anfrage" aria-label="${t.cta.requestNow}">
    ${t.cta.requestNow}
  </a>
`;

const logisticsTileHtml = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">SETUPS</span> & LOGISTIK
  </h3>
  <div class="panel-sep" aria-hidden="true"></div>
  <p class="panel-text">
    Modulare Bars, beleuchtetes Rückbuffet und saubere Stationen sorgen für Tempo und eine starke Bühne.
  </p>
  <p class="panel-text">
    Wir bringen Gläser, Eis, Garnituren und Backup-Produktion mit – inklusive Team für große Gästezahlen und lange Events.
  </p>
`;

const tileRundumSorglosDE = `
  <h3 class="panel-title display-heading display-size-h1"><span class="accent-text">RUNDUM-SORGLOS</span>-PAKET</h3>
  <div class="panel-sep" aria-hidden="true"></div>

  <p class="panel-text" style="margin:0.4rem 0 0.55rem;">
    Profitiere von 20 Jahren Erfahrung im Bereich Cocktail Catering und mobile Cocktailbar aus Berlin – damit Du Dich um nichts kümmern musst.
  </p>

  <p class="panel-text" style="margin:0.4rem 0 0.35rem;"><strong>DAS COCKTAIL CATERING PAKET BEINHALTET:</strong></p>

  <ul style="list-style:none; padding-left:0; margin:0.35rem 0 0.65rem; display:grid; gap:0.35rem;">
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> die mobile Cocktailbar</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> professionelle Barkeeper</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> eine Auswahl an Cocktails und Longdrinks</li>
  </ul>

  <p class="panel-text" style="margin:0.35rem 0 0.6rem;">
    Gläser, Eis, Getränkekarte und sämtliche Zutaten, sowie der Auf- und Abbau sind im Preis enthalten.
  </p>

  <p class="panel-text" style="margin:0.45rem 0 0.35rem;"><strong>IHRE VORTEILE:</strong></p>

  <ul style="list-style:none; padding-left:0; margin:0.35rem 0 0.6rem; display:grid; gap:0.35rem;">
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> PÜNKTLICHE LIEFERUNG bevor die Gäste eintreffen.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> KEINE ZEITLICHE BESCHRÄNKUNG – wir bleiben solange Sie feiern.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> IMMER RESERVEN DABEI – falls die vereinbarten Getränke nicht ausreichen.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> ABBAU AM FOLGETAG OHNE AUFPREIS – damit Sie Ihre Feier in Ruhe ausklingen lassen können.</li>
  </ul>

  <details style="margin:0.4rem 0 0.75rem;">
    <summary class="mb-btn panel-cta" style="display:inline-flex; cursor:pointer;">Mehr lesen…</summary>
    <p class="panel-text" style="margin:0.65rem 0 0;">
      Am Tag Ihrer Veranstaltung liefern wir unser Cocktail Catering rechtzeitig, damit alles steht, wenn Ihre Gäste kommen.
      Üblicherweise vereinbaren wir vorab eine zur Gästezahl passende Drinkanzahl und halten unverbindlich weitere Drinks als Reserve bereit.
      So haben Sie die Kosten im Blick und können während der Veranstaltung flexibel nachbestellen.
      Auf Wunsch holen wir alles am Folgetag ohne Aufpreis ab, damit Sie die Feier entspannt ausklingen lassen können.
    </p>
  </details>

  <a class="panel-cta mb-btn" href="/anfrage" aria-label="${t.cta.requestNow}" style="display:inline-flex; margin-top:0.25rem;">
    HIER DIREKT ZUR ANFRAGE
  </a>
`;

const tilesRows = [
  {
    left: {
      kind: "text",
      ariaLabel: "Rundum-Sorglos-Paket",
      html: tileRundumSorglosDE,
    },
    right: {
      kind: "image",
      panelClass: "is-align-left is-intro",
      ariaLabel: "Cocktail Catering Impression",
      bgImage: "/images/hero.jpg",
      speed: 0.35,
    },
  },
  {
    left: {
      kind: "image",
      panelClass: "is-align-left is-cocktail",
      ariaLabel: "Cocktail Detail",
      bgImage: "/images/russian-wild-berry-cocktail.jpg",
      speed: 0.35,
    },
    right: { kind: "text", ariaLabel: "Menüs und Produkte", html: menusTileHtml },
  },
  {
    left: { kind: "text", ariaLabel: "Setups und Logistik", html: logisticsTileHtml },
    right: {
      kind: "image",
      panelClass: "is-align-right is-bar",
      ariaLabel: "Mobile Bar Setup",
      bgImage: "/images/mobile-cocktailbar-mit-rueckbuffet.jpg",
      speed: 0.35,
    },
  },
];

const servicesProps = {
  exclude: "cocktail-catering",
  headline: { accent: "NOCH NICHT GENUG?", rest: "WIR KÖNNEN NOCH MEHR!", sep: "–" },
};
---

<BaseLayout lang={lang}>
  <StandardPageLayout
    lang={lang}
    t={t}
    heroProps={heroProps}
    introProps={introProps}
    tilesRows={tilesRows}
    services={servicesProps}
  />
</BaseLayout>
