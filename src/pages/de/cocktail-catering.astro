---
import BaseLayout from "../../layouts/BaseLayout.astro";
import StandardPageLayout from "../../layouts/StandardPageLayout.astro";
import { i18n } from "../../i18n";

const lang = "de" as const;
const t = i18n[lang];

const heroProps = {
  titleLine1: "COCKTAIL CATERING",
  titleLine2: "MIETEN IN BERLIN",
  heroText:
    "Ob private Feier, Hochzeit, Messeparty oder Großveranstaltung in Berlin und üBARall  - Wenn Du unser mobiles Cocktail Catering mietest, verwöhnen wir Dich und Deine Gäste, damit Du Dich ganz auf Deine Veranstaltung konzentrieren kannst. Wähle eines unserer COCKTAIL-CATERING-PAKET-ANGEBOTE aus und wir melden uns zeitnah, um mit Dir alle Details zu besprechen.",
  heroUsps: [
    "PAKETANGEBOTE FÜR 50 - 300 PERSONEN",
    "RUND-UM-SORGLOS SERVICE",
    "GROSSE COCKTAIL & LONGDRINK AUSWAHL",
    "SCHNELLE BEARBEITUNG IHRER ANFRAGE",
  ],
  bgImage: "/images/cocktail-catering-moving-bars.jpg",
};

const introProps = {
  t,
  titleLine1: "COCKTAIL CATERING",
  titleLine2: "MIETEN IN BERLIN",
  heroText:
    "Ob private Feier, Hochzeit, Messeparty oder Großveranstaltung in Berlin und üBARall  - Wenn Sie unser mobiles Cocktail Catering mieten, verwöhnen wir Sie und Ihre Gäste, damit Sie sich ganz auf Ihre Veranstaltung konzentrieren können. Wählen Sie eines unserer COCKTAIL-CATERING-PAKET-ANGEBOTE aus und wir melden uns zeitnah, um mit Ihnen alle Details zu besprechen.",
};

const introTileHtml = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">COCKTAIL</span> CATERING
  </h3>
  <div class="panel-sep" aria-hidden="true"></div>
  <p class="panel-text">
    Full-Service mobile Bar mit Barkeepern, Ausstattung und Mise en Place für Dein Event.
  </p>
  <p class="panel-text">
    Wir planen Menüs, Lieferwege und Timings so, dass Empfang, Dinner oder Party ohne Wartezeiten laufen.
  </p>
`;

const tileCocktailsLongdrinksDE = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">COCKTAILS</span> &amp; LONGDRINKS
  </h3>

  <p class="panel-text">
    Wenn Du unser Cocktail Catering mietest, mixen wir für Dich und Deine Gäste klassische und moderne Cocktails oder/und Longdrinks aus besten Zutaten.
    Wir arbeiten mit bekannten Markenspirituosen, hochwertigen Fruchtsäften der Marke Bauer Fruchtsaft, Fillern von Thomas Henry und frischen Zutaten,
    die wir mit Sachverstand aussuchen und verarbeiten.
  </p>

  <p class="panel-text">
    Hast Du genaue Vorstellungen für Dein Cocktail Catering oder einen Lieblingscocktail? Wir helfen Dir bei der Auswahl!
  </p>

  <p class="panel-text">
    Vertraue auf unsere Erfahrung und wähle eines unserer Cocktailmenus.
  </p>

  <ul class="mb-bullets">
    <li class="panel-text">Teile uns Deine Wünsche mit und wir setzen Sie um!</li>
    <li class="panel-text">Auf Wunsch individuelles Getränkekonzept.</li>
    <li class="panel-text">Eine Cocktailkarte für die mobile Cocktailbar gestalten wir Dir kostenfrei!</li>
  </ul>

  <p class="panel-text">
    Sprich mit uns und lass Dich beraten.
  </p>

  <a class="panel-cta mb-btn" href="#menus">
    COCKTAIL MENU AUSWAHL ANSEHEN
  </a>
`;

const tileRundumSorglosDE = `
  <h3 class="panel-title display-heading display-size-h1"><span class="accent-text">RUNDUM-SORGLOS</span>-PAKET</h3>
  <div class="panel-sep" aria-hidden="true"></div>

  <p class="panel-text">
    Profitiere von 20 Jahren Erfahrung im Bereich Cocktail Catering und mobile Cocktailbar aus Berlin – damit Du Dich um nichts kümmern musst.
  </p>

  <p class="panel-text"><strong>DAS COCKTAIL CATERING PAKET BEINHALTET:</strong></p>

  <ul class="mb-bullets">
    <li class="panel-text">die mobile Cocktailbar</li>
    <li class="panel-text">professionelle Barkeeper</li>
    <li class="panel-text">eine Auswahl an Cocktails und Longdrinks</li>
  </ul>

  <p class="panel-text">
    Gläser, Eis, Getränkekarte und sämtliche Zutaten, sowie der Auf- und Abbau sind im Preis enthalten.
  </p>

  <p class="panel-text"><strong>IHRE VORTEILE:</strong></p>

  <ul class="mb-bullets">
    <li class="panel-text">PÜNKTLICHE LIEFERUNG bevor die Gäste eintreffen.</li>
    <li class="panel-text">KEINE ZEITLICHE BESCHRÄNKUNG – wir bleiben solange Ihr feiert.</li>
    <li class="panel-text">IMMER RESERVEN DABEI – falls die vereinbarten Getränke nicht ausreichen.</li>
    <li class="panel-text">ABBAU AM FOLGETAG OHNE AUFPREIS – damit Ihr Eure Feier in Ruhe ausklingen lassen könnt.</li>
  </ul>

  <details>
    <summary>Mehr lesen</summary>
    <p class="panel-text">
      Am Tag Ihrer Veranstaltung liefern wir unser Cocktail Catering rechtzeitig, damit alles steht, wenn Deine Gäste kommen.
      Üblicherweise vereinbaren wir vorab eine zur Gästezahl passende Drinkanzahl und halten unverbindlich weitere Drinks als Reserve bereit.
      So hast Du die Kosten im Blick und kannst während der Veranstaltung flexibel nachbestellen.
      Auf Wunsch holen wir alles am Folgetag ohne Aufpreis ab, damit Ihr die Feier entspannt ausklingen lassen könnt.
    </p>
  </details>

  <a class="panel-cta mb-btn" href="/anfrage" aria-label="${t.cta.requestNow}">
    HIER DIREKT ZUR ANFRAGE
  </a>
`;

const tilesRows = [
  {
    left: {
      kind: "text",
      ariaLabel: "Rundum-Sorglos-Paket",
      html: tileRundumSorglosDE,
    },
    right: {
      kind: "image",
      panelClass: "is-align-left is-intro",
      ariaLabel: "Cocktail Catering Impression",
      bgImage: "/images/hero.jpg",
      speed: 0.35,
    },
  },
  {
    left: {
      kind: "image",
      panelClass: "is-align-left is-cocktail",
      ariaLabel: "Cocktail Detail",
      bgImage: "/images/russian-wild-berry-cocktail.jpg",
      speed: 0.35,
    },
    right: { kind: "text", ariaLabel: "Cocktails & Longdrinks", html: tileCocktailsLongdrinksDE },
  },
];

const servicesProps = {
  exclude: "cocktail-catering",
  headline: { accent: "NOCH NICHT GENUG?", rest: "WIR KÖNNEN NOCH MEHR!", sep: "–" },
};
---

<BaseLayout lang={lang}>
  <StandardPageLayout
    lang={lang}
    t={t}
    heroProps={heroProps}
    introProps={introProps}
    tilesRows={tilesRows}
    services={servicesProps}
  />
</BaseLayout>
