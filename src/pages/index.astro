<style>
  .eyebrow {
    text-transform: uppercase;
    color: var(--accent);
    font-weight: 700;
    letter-spacing: 0.08em;
    font-size: 0.95rem;
    margin: 0 0 0.35rem;
  }

  .section-title {
    margin: 0;
    font-size: clamp(2.1rem, 3vw, 3rem);
    line-height: var(--heading-line-height);
  }

  .reviews-section {
    background: #0c0c0c;
    padding: var(--section-pad-block) 0;
    color: var(--text-color);
  }

  .reviews-inner {
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .reviews-header {
    display: grid;
    grid-template-columns: 1.4fr auto;
    gap: clamp(1.5rem, 3vw, 2.5rem);
    align-items: center;
  }

  .reviews-meta .rating {
    color: var(--text-muted-color);
    margin: 0.5rem 0 0;
    font-weight: 600;
  }

  .ghost-button {
    justify-self: end;
    align-self: start;
    padding: 0.9rem 1.4rem;
    border: 1px solid rgba(var(--accent-rgb), 0.7);
    color: var(--text-color);
    border-radius: 999px;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.08em;
    background: transparent;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .ghost-button:hover {
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.2rem, 2vw, 1.8rem);
  }

  .review-card {
    background: #0f0f0f;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--reviews-card-radius);
    padding: clamp(1.2rem, 2.2vw, 1.6rem);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35);
  }

  .review-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .reviewer {
    margin: 0;
    font-weight: 700;
  }

  .timestamp {
    margin: 0.1rem 0 0;
    color: var(--text-muted-color);
    font-size: 0.95rem;
  }

  .stars {
    margin: 0;
    color: var(--accent);
    font-weight: 800;
  }

  .review-text {
    margin: 0;
    color: #d8d8d8;
  }

  .partners-section {
    padding: var(--section-pad-block) 0;
    background: #060606;
  }

  .partners-heading {
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--partner-grid-gap);
  }

  .partner-tile {
    background: #ffffff;
    color: #222;
    height: 120px;
    border-radius: 12px;
    display: grid;
    place-items: center;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .divider-strip {
    height: var(--divider-strip-height);
    background-image: url("/images/moving-bars-mobile-cocktailbar.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    width: 100%;
  }

  .site-footer {
    background: #0a0a0a;
    padding: var(--section-pad-block) 0 var(--footer-pad-block);
    color: var(--text-color);
  }

  .footer-inner {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: clamp(1.5rem, 3vw, 2rem);
    align-items: center;
  }

  .footer-contact .section-title {
    margin-bottom: 0.8rem;
  }

  .contact-list {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    margin: 1rem 0;
  }

  .social-buttons {
    display: flex;
    gap: 0.6rem;
  }

  .social-buttons button {
    background: transparent;
    border: 1px solid rgba(var(--accent-rgb), 0.7);
    color: var(--text-color);
    padding: 0.6rem 0.85rem;
    border-radius: 10px;
    font-weight: 700;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .social-buttons button:hover {
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
  }

  .footer-divider {
    height: 100%;
    width: var(--footer-divider-width);
    background: linear-gradient(to bottom, rgba(var(--accent-rgb), 0), rgba(var(--accent-rgb), 0.8), rgba(var(--accent-rgb), 0));
    margin-inline: auto;
  }

  .footer-highlight {
    display: flex;
    justify-content: center;
  }

  .icon-placeholder {
    width: clamp(120px, 12vw, 160px);
    height: clamp(120px, 12vw, 160px);
    border-radius: 28px;
    background: rgba(var(--accent-rgb), 0.12);
    display: grid;
    place-items: center;
    font-size: clamp(2.5rem, 5vw, 3.4rem);
  }

  .footer-meta {
    margin-top: clamp(2rem, 3.5vw, 3rem);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.95rem;
    color: var(--text-muted-color);
  }

  .footer-meta a:hover {
    color: var(--accent);
  }

  @media (max-width: 860px) {
    .reviews-header {
      grid-template-columns: 1fr;
    }

    .ghost-button {
      justify-self: start;
    }

    .footer-inner {
      grid-template-columns: 1fr;
    }

    .footer-divider {
      height: 2px;
      width: 100%;
      background: linear-gradient(to right, rgba(var(--accent-rgb), 0), rgba(var(--accent-rgb), 0.8), rgba(var(--accent-rgb), 0));
    }
  }
</style>
