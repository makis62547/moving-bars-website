<style>
  .section-title {
    margin: 0;
    font-size: clamp(2.1rem, 3vw, 3rem);
    line-height: var(--heading-line-height);
  }

  .section-title .title-accent {
    color: var(--accent);
  }

  .reviews-section {
    background: #0c0c0c;
    padding: var(--section-pad-block) 0;
    color: var(--text-color);
  }

  .reviews-inner {
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .reviews-header {
    display: grid;
    grid-template-columns: 1.4fr auto;
    gap: clamp(1.5rem, 3vw, 2.5rem);
    align-items: start;
  }

  .reviews-meta .rating {
    color: var(--text-muted-color);
    margin: 0.5rem 0 0;
    font-weight: 600;
  }

  .ghost-button {
    justify-self: end;
    align-self: start;
    padding: 0.9rem 1.4rem;
    border: 1px solid rgba(var(--accent-rgb), 0.7);
    color: var(--text-color);
    border-radius: 0;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.08em;
    background: transparent;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .ghost-button:hover {
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.2rem, 2vw, 1.8rem);
  }

  .review-card {
    background: #0f0f0f;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0;
    padding: clamp(1.2rem, 2.2vw, 1.6rem);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35);
  }

  .review-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .reviewer {
    margin: 0;
    font-weight: 700;
  }

  .timestamp {
    margin: 0.1rem 0 0;
    color: var(--text-muted-color);
    font-size: 0.95rem;
  }

  .stars {
    margin: 0;
    color: var(--accent);
    font-weight: 800;
  }

  .review-text {
    margin: 0;
    color: #d8d8d8;
  }

  .partners-section {
    padding: var(--section-pad-block) 0;
    background: #060606;
  }

  .partners-heading {
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--partner-grid-gap);
  }

  .partner-tile {
    background: #ffffff;
    color: #222;
    height: 120px;
    border-radius: 0;
    display: grid;
    place-items: center;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .divider-strip {
    height: var(--divider-strip-height);
    width: 100%;
    position: relative;
    background-position: var(--divider-strip-bg-pos);
  }

  .parallax-section {
    position: relative;
    overflow: hidden;
  }

  .parallax-bg {
    position: absolute;
    inset: -25% 0 0 0;
    height: 150%;
    background-image: url("/images/moving-bars-mobile-cocktailbar.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: var(--divider-strip-bg-pos);
  }

  @media (hover: hover) and (pointer: fine) {
    .parallax-bg {
      background-attachment: fixed;
    }
  }

  .parallax-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.25);
  }

  .site-footer {
    background: #0a0a0a;
    padding: var(--section-pad-block) 0 var(--footer-pad-block);
    color: var(--text-color);
  }

  .footer-inner {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: clamp(1.5rem, 3vw, 2rem);
    align-items: stretch;
  }

  .footer-contact .section-title {
    margin-bottom: 0.8rem;
  }

  .section-divider {
    width: 100%;
    height: 1px;
    background: var(--accent);
    opacity: 0.9;
  }

  .section-divider--vertical {
    width: 1px;
    height: 100%;
    background: var(--accent);
    opacity: 0.9;
    margin-inline: auto;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 1.1rem 0 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-list li {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 0.7rem;
  }

  .contact-ico {
    display: inline-flex;
    width: 28px;
    height: 28px;
    align-items: center;
    justify-content: center;
  }

  .contact-ico svg {
    width: 100%;
    height: 100%;
    fill: var(--accent);
  }

  .contact-list a {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 700;
  }

  .contact-list a:hover {
    color: var(--accent);
  }

  .footer-highlight {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icon-placeholder {
    width: clamp(120px, 12vw, 160px);
    height: clamp(120px, 12vw, 160px);
    border-radius: 0;
    background: rgba(var(--accent-rgb), 0.12);
    display: grid;
    place-items: center;
    font-size: clamp(2.5rem, 5vw, 3.4rem);
  }

  .footer-meta {
    margin-top: clamp(2rem, 3.5vw, 3rem);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.6rem;
    font-size: 0.95rem;
    color: var(--text-muted-color);
  }

  .footer-meta a:hover {
    color: var(--accent);
  }

  @media (max-width: 860px) {
    .reviews-header {
      grid-template-columns: 1fr;
    }

    .ghost-button {
      justify-self: start;
    }

    .footer-inner {
      grid-template-columns: 1fr;
      gap: 1.75rem;
    }

    .section-divider--vertical {
      height: 1px;
      width: 100%;
    }
  }
</style>
