---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
---

<BaseLayout>
  <Header />
  <Hero />

  <section class="max-w-6xl mx-auto px-6 py-20">
    <h2 class="text-3xl font-heading font-bold mb-8">Unsere Leistungen</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <a href="/cocktail-catering" class="bg-white/5 p-8 rounded-lg border border-white/10 hover:border-orange-500 transition">
        <h3 class="font-heading font-bold text-xl mb-3">Cocktail Catering</h3>
        <p class="opacity-80">Professionelle Drinks & Barkeeper für Events jeder Größe.</p>
      </a>

      <a href="/mobile-bar" class="bg-white/5 p-8 rounded-lg border border-white/10 hover:border-orange-500 transition">
        <h3 class="font-heading font-bold text-xl mb-3">Mobile Bar</h3>
        <p class="opacity-80">Elegante mobile Bars – modular, stilvoll und flexibel.</p>
      </a>

      <a href="/cocktailkurse" class="bg-white/5 p-8 rounded-lg border border-white/10 hover:border-orange-500 transition">
        <h3 class="font-heading font-bold text-xl mb-3">Cocktailkurse</h3>
        <p class="opacity-80">Perfekt für Teamevents oder private Feiern.</p>
      </a>

      <a href="/kaffeecatering" class="bg-white/5 p-8 rounded-lg border border-white/10 hover:border-orange-500 transition">
        <h3 class="font-heading font-bold text-xl mb-3">Kaffee Catering</h3>
        <p class="opacity-80">Barista-Qualität für Events jeder Art.</p>
      </a>
    </div>
  </section>
</BaseLayout>

