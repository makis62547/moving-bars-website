---
import BaseLayout from "../../layouts/BaseLayout.astro";
import StandardPageLayout from "../../layouts/StandardPageLayout.astro";
import { i18n } from "../../i18n";

const lang = "en" as const;
const t = i18n[lang];

const heroProps = {
  titleLine1: "HIRE COCKTAIL CATERING",
  titleLine2: "IN BERLIN",
  heroText:
    "Whether it’s a private party, wedding, trade-fair afterparty or a large event in Berlin and beyond — when you hire our mobile cocktail catering, we’ll treat you and your guests so you can focus entirely on your event. Choose one of our COCKTAIL CATERING PACKAGE DEALS and we’ll get back to you quickly to discuss all details.",
  heroUsps: [
    "PACKAGE DEALS FOR 50–300 GUESTS",
    "FULL-SERVICE, WORRY-FREE SETUP",
    "WIDE SELECTION OF COCKTAILS & LONG DRINKS",
    "FAST RESPONSE TO YOUR INQUIRY",
  ],
  bgImage: "/images/cocktail-catering-moving-bars.jpg",
};

const introProps = {
  t,
  titleLine1: "HIRE COCKTAIL CATERING",
  titleLine2: "IN BERLIN",
  heroText:
    "Whether it’s a private party, wedding, trade-fair afterparty or a large event in Berlin and beyond — when you hire our mobile cocktail catering, we’ll treat you and your guests so you can focus entirely on your event. Choose one of our COCKTAIL CATERING PACKAGE DEALS and we’ll get back to you quickly to discuss all details.",
};

const introTileHtml = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">COCKTAIL</span> CATERING
  </h3>
  <div class="panel-sep" aria-hidden="true"></div>
  <p class="panel-text">
    Full-service mobile bars with bartenders, backbar, glassware, ice and prep included.
  </p>
  <p class="panel-text">
    We choreograph menus, delivery routes and timing so receptions, dinners and parties flow without waiting lines.
  </p>
`;

const tileCocktailsLongdrinksEN = `
  <h3 class="panel-title display-heading display-size-h1">
    <span class="accent-text">COCKTAILS</span> &amp; LONG DRINKS
  </h3>

  <p class="panel-text">
    When you hire our cocktail catering, we mix classic and modern cocktails and/or long drinks for you and your guests using the best ingredients.
    We work with well-known premium spirit brands, high-quality fruit juices (Bauer Fruchtsaft), Thomas Henry mixers, and fresh ingredients that we
    select and prepare with care and expertise.
  </p>

  <p class="panel-text">
    Do you have a specific idea for your cocktail catering — or a favourite cocktail? We’ll help you choose the perfect selection.
  </p>

  <p class="panel-text">
    Trust our experience and choose one of our cocktail menus.
  </p>

  <ul style="list-style:none; padding-left:0; margin:0;">
    <li class="panel-text">
      <span class="accent-text" style="font-size:1.25em; line-height:1; display:inline-block; margin-right:0.35rem;">▸</span>
      Tell us what you want — we’ll make it happen.
    </li>
    <li class="panel-text">
      <span class="accent-text" style="font-size:1.25em; line-height:1; display:inline-block; margin-right:0.35rem;">▸</span>
      Custom drink concept available on request.
    </li>
    <li class="panel-text">
      <span class="accent-text" style="font-size:1.25em; line-height:1; display:inline-block; margin-right:0.35rem;">▸</span>
      We create a cocktail menu card for your mobile bar free of charge.
    </li>
  </ul>

  <p class="panel-text">
    Get in touch — we’ll be happy to advise you.
  </p>

  <a class="panel-cta mb-btn" href="#menus" style="margin-top:0.25rem;">
    VIEW COCKTAIL MENU OPTIONS
  </a>
`;

const tileRundumSorglosEN = `
  <h3 class="panel-title display-heading display-size-h1"><span class="accent-text">WORRY-FREE</span> FULL SERVICE</h3>
  <div class="panel-sep" aria-hidden="true"></div>

  <p class="panel-text" style="margin:0.4rem 0 0.55rem;">
    Benefit from 20 years of cocktail catering experience from Berlin — we take care of everything for you.
  </p>

  <p class="panel-text" style="margin:0.4rem 0 0.35rem;"><strong>THE COCKTAIL CATERING PACKAGE INCLUDES:</strong></p>

  <ul style="list-style:none; padding-left:0; margin:0.35rem 0 0.65rem; display:grid; gap:0.35rem;">
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> the mobile cocktail bar</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> professional bartenders</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> a selection of cocktails and long drinks</li>
  </ul>

  <p class="panel-text" style="margin:0.35rem 0 0.6rem;">
    Glassware, ice, drink menu, all ingredients plus setup and teardown are included in the price.
  </p>

  <p class="panel-text" style="margin:0.45rem 0 0.35rem;"><strong>YOUR ADVANTAGES:</strong></p>

  <ul style="list-style:none; padding-left:0; margin:0.35rem 0 0.6rem; display:grid; gap:0.35rem;">
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> ON-TIME DELIVERY before your guests arrive.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> NO TIME LIMIT — we stay as long as you celebrate.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> ALWAYS EXTRA STOCK — if the agreed drinks aren’t enough.</li>
    <li class="panel-text"><span class="accent-text" style="font-size:1.25em;">▸</span> NEXT-DAY PICKUP AT NO EXTRA COST — so you can enjoy your event until the very end.</li>
  </ul>

  <details style="margin:0.4rem 0 0.75rem;">
    <summary>Read more</summary>
    <p class="panel-text" style="margin:0.65rem 0 0;">
      On the day of your event we deliver at the agreed time so everything is ready when guests arrive.
      We typically align a drink quantity with your guest count and also bring extra reserve drinks.
      This keeps your costs transparent while letting you add more during the event if needed.
      If you like, we’ll collect everything the following day at no extra charge so you can wind down peacefully.
    </p>
  </details>

  <a class="panel-cta mb-btn" href="/en/request" aria-label="${t.cta.requestNow}" style="display:inline-flex; margin-top:0.25rem;">
    GO STRAIGHT TO THE REQUEST
  </a>
`;

const tilesRows = [
  {
    left: {
      kind: "text",
      ariaLabel: "Rundum-Sorglos-Paket",
      html: tileRundumSorglosEN,
    },
    right: {
      kind: "image",
      panelClass: "is-align-left is-intro",
      ariaLabel: "Cocktail Catering Impression",
      bgImage: "/images/hero.jpg",
      speed: 0.35,
    },
  },
  {
    left: {
      kind: "image",
      panelClass: "is-align-left is-cocktail",
      ariaLabel: "Cocktail Detail",
      bgImage: "/images/russian-wild-berry-cocktail.jpg",
      speed: 0.35,
    },
    right: { kind: "text", ariaLabel: "Cocktails & Longdrinks", html: tileCocktailsLongdrinksEN },
  },
];

const servicesProps = {
  exclude: "cocktail-catering",
  headline: { accent: "NOT ENOUGH YET?", rest: "WE CAN DO MORE!", sep: "–" },
};
---

<BaseLayout lang={lang}>
  <StandardPageLayout
    lang={lang}
    t={t}
    heroProps={heroProps}
    introProps={introProps}
    tilesRows={tilesRows}
    services={servicesProps}
  />
</BaseLayout>
