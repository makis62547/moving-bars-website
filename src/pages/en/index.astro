---
import { i18n } from "../../i18n";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import HeroIntroBlock from "../../components/HeroIntroBlock.astro";
import UnderHeroTiles from "../../components/UnderHeroTiles.astro";
import ServicesOverview from "../../components/ServicesOverview.astro";
import BlogsOverview from "../../components/BlogsOverview.astro";

const lang = "en";
const t = i18n.en;
---

<BaseLayout lang={lang}>
  <main class="bg-black">
    {/* Regel: Neue Blocks immer unten anfügen, außer explizit anders gewünscht. Reihenfolge: ServicesOverview -> BlogsOverview */}
    <Hero
      titleLine1={t.hero.line1}
      titleLine2={t.hero.line2}
      heroText={t.heroText}
      heroUsps={t.heroUsps}
    />
    <HeroIntroBlock t={t} titleLine1={t.hero.line1} titleLine2={t.hero.line2} heroText={t.heroText} />
    <UnderHeroTiles t={t} />
    <ServicesOverview />
    <section class="reviews-section" id="google-reviews">
      <div class="site-container reviews-inner">
        <div class="reviews-header">
          <div class="reviews-meta">
            <h2 class="section-title">
              <span class="title-accent">GOOGLE</span> BEWERTUNGEN
            </h2>
            <p class="rating">5.0 ★★★★★ (123)</p>
          </div>
          <a class="ghost-button" href="#">Bewerten Sie uns auf Google</a>
        </div>
        <div class="reviews-grid">
          <article class="review-card">
            <div class="review-card__header">
              <div>
                <p class="reviewer">Max Mustermann</p>
                <p class="timestamp">vor 14 Tagen</p>
              </div>
              <p class="stars">★★★★★</p>
            </div>
            <p class="review-text">
              Großartiger Service und fantastische Drinks! Unsere Gäste waren begeistert – gerne wieder.
            </p>
          </article>
          <article class="review-card">
            <div class="review-card__header">
              <div>
                <p class="reviewer">Sophie Beispiel</p>
                <p class="timestamp">vor 1 Monat</p>
              </div>
              <p class="stars">★★★★★</p>
            </div>
            <p class="review-text">
              Professionelles Team, schnelle Kommunikation und eine wunderbare Atmosphäre an der Bar.
            </p>
          </article>
          <article class="review-card">
            <div class="review-card__header">
              <div>
                <p class="reviewer">Leon Demo</p>
                <p class="timestamp">vor 2 Monaten</p>
              </div>
              <p class="stars">★★★★★</p>
            </div>
            <p class="review-text">
              Stilvolle Bar, super Cocktails und sehr freundliche Barkeeper – absolute Empfehlung.
            </p>
          </article>
        </div>
      </div>
    </section>
    <BlogsOverview />

    <section
      class="divider-strip parallax-section"
      aria-hidden="true"
      style="height: var(--divider-strip-height);"
    >
      <div
        class="divider-strip-bg parallax-bg"
        role="presentation"
        style="background-image: url('/images/cocktail-catering-moving-bars.jpg');"
      ></div>
      <div class="divider-strip-overlay" aria-hidden="true"></div>
    </section>
  </main>
</BaseLayout>

<style>
  .section-title {
    margin: 0;
    font-size: clamp(2.1rem, 3vw, 3rem);
    line-height: var(--heading-line-height);
  }

  .section-title .title-accent {
    color: var(--accent);
  }

  .reviews-section {
    background: #000;
    padding: var(--section-pad-block) 0;
    color: var(--text-color);
  }

  .reviews-inner {
    display: flex;
    flex-direction: column;
    gap: clamp(2rem, 4vw, 3rem);
  }

  .reviews-header {
    display: grid;
    grid-template-columns: 1.4fr auto;
    gap: clamp(1.5rem, 3vw, 2.5rem);
    align-items: start;
  }

  .reviews-meta .rating {
    color: var(--text-muted-color);
    margin: 0.5rem 0 0;
    font-weight: 600;
  }

  .ghost-button {
    justify-self: end;
    align-self: start;
    padding: 0.9rem 1.4rem;
    border: 1px solid rgba(var(--accent-rgb), 0.7);
    color: var(--text-color);
    border-radius: 0;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.08em;
    background: transparent;
    transition: background 0.2s ease, color 0.2s ease;
  }

  .ghost-button:hover {
    background: rgba(var(--accent-rgb), 0.12);
    color: var(--accent);
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: clamp(1.2rem, 2vw, 1.8rem);
  }

  .review-card {
    background: #0f0f0f;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0;
    padding: clamp(1.2rem, 2.2vw, 1.6rem);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    box-shadow: 0 20px 45px rgba(0, 0, 0, 0.35);
  }

  .review-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
  }

  .reviewer {
    margin: 0;
    font-weight: 700;
  }

  .timestamp {
    margin: 0.1rem 0 0;
    color: var(--text-muted-color);
    font-size: 0.95rem;
  }

  .stars {
    margin: 0;
    color: var(--accent);
    font-weight: 800;
  }

  .review-text {
    margin: 0;
    color: #d8d8d8;
  }

  .partners-section {
    padding: var(--section-pad-block) 0;
    background: #000;
  }

  .partners-heading {
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--partner-grid-gap);
  }

  .partner-tile {
    background: #ffffff;
    color: #222;
    height: 120px;
    border-radius: 0;
    display: grid;
    place-items: center;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .divider-strip{
    position: relative;
    overflow: hidden;

    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
  }

  .divider-strip-bg{
    position: absolute;
    inset: var(--divider-strip-bg-inset-top) 0 0 0;
    height: var(--divider-strip-bg-height);
    width: 100%;

    background-size: var(--divider-strip-bg-size);
    background-repeat: no-repeat;
    background-position: var(--divider-strip-bg-pos);
  }

  .divider-strip-overlay{
    position: absolute;
    inset: 0;
    background: var(--divider-strip-overlay);
  }

  @media (hover: hover) and (pointer: fine){
    .divider-strip-bg{
      background-attachment: fixed;
    }
  }

  @media (max-width: 860px) {
    .reviews-header {
      grid-template-columns: 1fr;
    }

    .ghost-button {
      justify-self: start;
    }
  }
</style>
