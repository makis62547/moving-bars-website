---
import { i18n } from "../../i18n";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";
import HeroIntroBlock from "../../components/HeroIntroBlock.astro";
import UnderHeroTiles from "../../components/UnderHeroTiles.astro";
import ServicesOverview from "../../components/ServicesOverview.astro";
import BlogsOverview from "../../components/BlogsOverview.astro";
import GoogleReviewsBlock from "../../components/GoogleReviewsBlock.astro";

const lang = "en";
const t = i18n.en;
---

<BaseLayout lang={lang}>
  <main class="bg-black">
    {/* Regel: Neue Blocks immer unten anfügen, außer explizit anders gewünscht. Reihenfolge: ServicesOverview -> BlogsOverview */}
    <Hero
      titleLine1={t.hero.line1}
      titleLine2={t.hero.line2}
      heroText={t.heroText}
      heroUsps={t.heroUsps}
    />
    <HeroIntroBlock t={t} titleLine1={t.hero.line1} titleLine2={t.hero.line2} heroText={t.heroText} />
    <UnderHeroTiles t={t} />
    <ServicesOverview />
    <GoogleReviewsBlock />
    <BlogsOverview />

    <section
      class="divider-strip parallax-section"
      aria-hidden="true"
      style="height: var(--divider-strip-height);"
    >
      <div
        class="divider-strip-bg parallax-bg"
        role="presentation"
        style="background-image: url('/images/cocktail-catering-moving-bars.jpg');"
      ></div>
      <div class="divider-strip-overlay" aria-hidden="true"></div>
    </section>
  </main>
</BaseLayout>

<style>
  .partners-section {
    padding: var(--section-pad-block) 0;
    background: #000;
  }

  .partners-heading {
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--partner-grid-gap);
  }

  .partner-tile {
    background: #ffffff;
    color: #222;
    height: 120px;
    border-radius: 0;
    display: grid;
    place-items: center;
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .divider-strip{
    position: relative;
    overflow: hidden;

    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
  }

  .divider-strip-bg{
    position: absolute;
    inset: var(--divider-strip-bg-inset-top) 0 0 0;
    height: var(--divider-strip-bg-height);
    width: 100%;

    background-size: var(--divider-strip-bg-size);
    background-repeat: no-repeat;
    background-position: var(--divider-strip-bg-pos);
  }

  .divider-strip-overlay{
    position: absolute;
    inset: 0;
    background: var(--divider-strip-overlay);
  }

  @media (hover: hover) and (pointer: fine){
    .divider-strip-bg{
      background-attachment: fixed;
    }
  }
</style>
